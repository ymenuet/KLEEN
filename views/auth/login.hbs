<div class="main-text container">
  <h2>Login</h2>

  <form action="/auth/login" method="POST" id="form-container">
    <br>
    <label for="email">Email</label>
    <input id="email" type="text" name="email" placeholder="JonSnow">
    <br>
    <br>
    <label for="password">Password</label>
    <input id="password" type="password" name="password" placeholder="Your password">
    <br>
    <br>
    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}

    <br><br>

    <button class="submitbtn my-btn">Login</button>
  </form>

  <div class="iconos">
    <a href="/auth/google"><i class="fab fa-google fa-2x"></i></a>
    <a href="/auth/facebook"><i class="fab fa-facebook fa-2x"></i></a>
  </div>

  <p class="account-message">
    Don't have an account yet?
    <a href="/auth/signup">Signup</a>
  </p>
</div>